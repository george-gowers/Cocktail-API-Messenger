<div class="background">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-8">
        <div class="form">

        <h1>Need a recipe for your favorite cocktail?</h1>

        <%= simple_form_for (@cocktail) do |f| %>
          <%= f.input :name, :label => "Cocktail Name", placeholder: "mojito" %>
          <%= f.input :email, placeholder: "margarita@gmail.com" %>
          <%= f.submit 'Click for Cocktail!', class: "btn" %>
        <% end %>

        <p class="add"> can't find your cocktail? <%= link_to "add cocktail", new_drink_path %> </p>

        </div>
      </div>
    </div>
  </div>
</div>
